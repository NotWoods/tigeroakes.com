body{margin:0;min-height:100vh;display:grid;grid-template-rows:auto 1fr auto;font-family:Lato,trebuchet ms,sans-serif;color:rgba(0,0,0,.87);background:#f0f0f0}.inner{max-width:60rem;padding:0 1em;margin:0 auto}.hero-container{padding:2em}a{color:#c25018;text-decoration:none}a:hover:not([class]){text-decoration:underline}.button-link{padding:.5em 1.5em;display:inline-block;position:relative;color:inherit;background:#000;background:var(--block)}.button-link::after{border:1px solid}.cta{margin:2em 0;background:#fff;color:#000;text-shadow:none}.cta-wrap{text-align:center;font-size:1.5em}.cta-wrap .cta::after{will-change:opacity}.text-container{padding:1em 3em 3em;background:#fff}.project-text{color:#fff;text-shadow:1px 1px 1px rgba(0,0,0,.75)}hr{max-width:10em;margin:3vh auto 5vh;border-color:#000}img.center,video.center{margin:auto;display:block;max-width:100%;height:auto}@media(max-width:60em){img.center,video.center{width:100%}}.banner{display:flex;flex-wrap:wrap}.banner-container{padding:1em 0;background:#fff}.banner-title{margin:0;vertical-align:top;display:inline-block;text-transform:uppercase;font-size:1.1em}.banner:hover .dot::after{will-change:opacity}.dot{background:#e66d31;width:1.2em;height:1.2em;display:inline-block;margin-right:.75rem}.home-link{color:inherit}.home-link:hover .dot::after,.home-link:focus .dot::after{opacity:1}.nav{margin-left:auto;line-height:1.3em}.nav-link{color:inherit;margin-left:1em;display:inline-block;padding:0 .5em}.nav-link.current-page{font-weight:700}.nav-link::before{opacity:0}@media(max-width:36em){.banner{flex-flow:column nowrap;align-items:stretch;text-align:center}.nav{margin:1em 0 0}.nav .nav-link{margin:0}.nav .nav-link::before{left:-.25em}}.post.hero-container{--block: #ddd;background:#333}pre{padding:1em;white-space:pre-wrap}code{background-color:rgba(27,31,35,.05);overflow-wrap:break-word}@media(max-width:36rem){pre{margin:0 -3rem}}@media(max-width:19rem){.text-container{padding-left:1rem;padding-right:1rem}pre{margin:0 -1rem}}