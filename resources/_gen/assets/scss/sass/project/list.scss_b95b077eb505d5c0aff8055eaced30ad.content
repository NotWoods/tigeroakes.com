body{margin:0;min-height:100vh;display:grid;grid-template-rows:auto 1fr auto;font-family:Lato,trebuchet ms,sans-serif;color:rgba(0,0,0,.87);background:#f0f0f0}.inner{max-width:60rem;padding:0 1em;margin:0 auto}.hero-container{padding:2em}a{color:#c25018;text-decoration:none}a:hover:not([class]){text-decoration:underline}.button-link{padding:.5em 1.5em;display:inline-block;position:relative;color:inherit;background:#000;background:var(--block)}.button-link::after{border:1px solid}.cta{margin:2em 0;background:#fff;color:#000;text-shadow:none}.cta-wrap{text-align:center;font-size:1.5em}.cta-wrap .cta::after{will-change:opacity}.text-container{padding:1em 3em 3em;background:#fff}.project-text{color:#fff;text-shadow:1px 1px 1px rgba(0,0,0,.75)}hr{max-width:10em;margin:3vh auto 5vh;border-color:#000}img.center,video.center{margin:auto;display:block;max-width:100%;height:auto}.banner{display:flex;flex-wrap:wrap}.banner-container{padding:1em 0;background:#fff}.banner-title{margin:0;vertical-align:top;display:inline-block;text-transform:uppercase;font-size:1.1em}.banner:hover .dot::after{will-change:opacity}.dot{background:#e66d31;width:1.2em;height:1.2em;display:inline-block;margin-right:.75rem}.home-link{color:inherit}.home-link:hover .dot::after,.home-link:focus .dot::after{opacity:1}.nav{margin-left:auto;line-height:1.3em}.nav-link{color:inherit;margin-left:1em;display:inline-block;padding:0 .5em}.nav-link.current-page{font-weight:700}.nav-link::before{opacity:0}@media(max-width:36em){.banner{flex-flow:column nowrap;align-items:stretch;text-align:center}.nav{margin:1em 0 0}.nav .nav-link{margin:0}.nav .nav-link::before{left:-.25em}}.project{background-size:cover;background-position:center}.project-header{margin-bottom:.2em;background:0 0!important;font-size:1.5em}.project-tech{padding:0;margin-top:-1.1em;opacity:.8;font-size:.9em;line-height:1.5em}.project-text,.project-tech{margin:0}.project-links{margin:0 -.2em -.2em;margin:0 calc(var(--link-space,0.2em) * -1) calc(var(--link-space,0.2em) * -1)}.project-links .button-link{margin:.2em;margin:var(--link-space,0.2em)}.pt-item{display:inline}.pt-item::after{content:" | ";margin:0 .2em}.pt-item:last-child::after{content:none}.projects{display:flex;flex-wrap:wrap;padding:.5rem}.project{padding:1.5em 2em;display:flex;flex-direction:column;margin:.5rem;flex:2 0 auto;min-width:19em;max-width:calc(100% - 5em)}.project-logo{align-self:center;margin-bottom:2em}.project-header{white-space:nowrap;margin:0}.project-links{text-align:center;font-size:.95em;margin:.8em -.2em -.2em;display:flex;justify-content:center}.button-link{white-space:nowrap;flex:1;margin:.2em;max-width:7em}@media(max-width:26em){.project{min-width:initial}.project-header{white-space:initial}.project-links{flex-wrap:wrap}}