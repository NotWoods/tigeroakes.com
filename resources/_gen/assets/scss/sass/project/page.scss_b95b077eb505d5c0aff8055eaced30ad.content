body{margin:0;min-height:100vh;display:grid;grid-template-rows:auto 1fr auto;font-family:Lato,trebuchet ms,sans-serif;color:rgba(0,0,0,.87);background:#f0f0f0}.inner{max-width:60rem;padding:0 1em;margin:0 auto}.hero-container,.project{padding:2em;background-color:#333;background-size:cover;background-position:50%}a{color:#c25018;text-decoration:none}a:hover:not([class]){text-decoration:underline}.metadata{margin:0;padding:0;opacity:.8;font-size:.9em;line-height:1.5em}.button-link{padding:.5em 1.5em;display:inline-block;position:relative;color:inherit;background:#000;background:var(--block)}.button-link::after{border:1px solid}.cta{margin:2em 0;background:#fff;color:#000;text-shadow:none}.cta-wrap{text-align:center;font-size:1.5em}.cta-wrap .cta::after{will-change:opacity}.text-container{padding:1em 3em 3em;background:#fff;line-height:1.5em}.text-container h2{margin:1.5em 0 .5em}.project-text{color:#fff;text-shadow:1px 1px 1px rgba(0,0,0,.75)}hr{max-width:10em;margin:3vh auto 5vh;border-color:#000}img.center,video.center{margin:auto;display:block;max-width:100%;height:auto}@media(max-width:60em){img.center,video.center{width:100%}}.banner{display:flex;flex-wrap:wrap}.banner-container{padding:1em 0;background:#fff}.banner-title{margin:0;vertical-align:top;display:inline-block;text-transform:uppercase;font-size:1.1em}.banner:hover .dot::after{will-change:opacity}.dot{display:inline-block;margin-right:.75rem;vertical-align:text-top}.dot-inner{display:block}.home-link{color:inherit}.home-link:hover .dot::after,.home-link:focus .dot::after{opacity:1}.nav{margin-left:auto;line-height:1.3em}.nav-link{color:inherit;margin-left:1em;display:inline-block;padding:0 .5em}.nav-link.current-page{font-weight:700}.nav-link::before{opacity:0}@media(max-width:36em){.banner{flex-flow:column nowrap;align-items:stretch;text-align:center}.nav{margin:1em 0 0}.nav .nav-link{margin:0}.nav .nav-link::before{left:-.25em}}.project-header{margin-bottom:.2em;background:transparent!important;font-size:1.5em}.project-text{margin:0}.project-links{margin:0 -.2em -.2em;margin:0 calc(var(--link-space,0.2em) * -1) calc(var(--link-space,0.2em) * -1)}.project-links .button-link{margin:.2em;margin:var(--link-space,0.2em)}.pt-item{display:inline}.pt-item::after{content:" | ";margin:0 .2em}.pt-item:last-child::after{content:none}.project .hero{display:grid;grid-template:"image text" min-content "buttons buttons" min-content/min-content auto;grid-column-gap:4em}.project-header{margin-bottom:.2em}.project-links{--link-space: 0.3em;grid-area:buttons;justify-self:center;font-size:1.2em}.project-details{margin-top:-.5em}@media(max-width:36em){.project .hero{grid-template:"image" auto "text" auto "buttons" min-content/auto;justify-items:center}.project-links{margin-top:1em;font-size:1em;text-align:center}}