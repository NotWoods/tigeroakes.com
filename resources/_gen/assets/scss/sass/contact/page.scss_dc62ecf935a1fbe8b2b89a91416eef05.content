body{margin:0;min-height:100vh;display:grid;grid-template-rows:auto 1fr auto;font-family:Lato,trebuchet ms,sans-serif;color:rgba(0,0,0,.87);background:#f0f0f0}.inner{max-width:60rem;padding:0 1em;margin:0 auto}.hero-container{padding:2em}a{color:#c25018;text-decoration:none}a:hover:not([class]){text-decoration:underline}.button-link{padding:.5em 1.5em;display:inline-block;position:relative;color:inherit;background:#000;background:var(--block)}.button-link::after{border:1px solid}.cta{margin:2em 0;background:#fff;color:#000;text-shadow:none}.cta-wrap{text-align:center;font-size:1.5em}.cta-wrap .cta::after{will-change:opacity}.text-container{padding:1em 3em 3em;background:#fff;line-height:1.5em}.text-container h2{margin:1.5em 0 .5em}.project-text{color:#fff;text-shadow:1px 1px 1px rgba(0,0,0,.75)}hr{max-width:10em;margin:3vh auto 5vh;border-color:#000}img.center,video.center{margin:auto;display:block;max-width:100%;height:auto}@media(max-width:60em){img.center,video.center{width:100%}}.banner{display:flex;flex-wrap:wrap}.banner-container{padding:1em 0;background:#fff}.banner-title{margin:0;vertical-align:top;display:inline-block;text-transform:uppercase;font-size:1.1em}.banner:hover .dot::after{will-change:opacity}.dot{background:#e66d31;width:1.2em;height:1.2em;display:inline-block;margin-right:.75rem}.home-link{color:inherit}.home-link:hover .dot::after,.home-link:focus .dot::after{opacity:1}.nav{margin-left:auto;line-height:1.3em}.nav-link{color:inherit;margin-left:1em;display:inline-block;padding:0 .5em}.nav-link.current-page{font-weight:700}.nav-link::before{opacity:0}@media(max-width:36em){.banner{flex-flow:column nowrap;align-items:stretch;text-align:center}.nav{margin:1em 0 0}.nav .nav-link{margin:0}.nav .nav-link::before{left:-.25em}}.shadow{position:relative;box-shadow:0 1px 2px rgba(0,0,0,.24)}.shadow::after{content:"";position:absolute;left:0;right:0;top:0;bottom:0;box-shadow:0 3px 10px rgba(0,0,0,.85);background:0 0;opacity:0;transition:opacity .2s ease}.shadow:hover::after,.shadow:focus::after{opacity:1}.shadow:active::after{opacity:.5}.highlight-title,h3{position:relative}.highlight-title::before,h3::before{content:"";position:absolute;left:-1em;width:.5em;height:100%;background:var(--block)}.dot{box-shadow:none}.dot::after{box-shadow:0 4px 4px rgba(0,0,0,.3)}.nav-link::before{background:#e66d31;left:-.5em;transform:scaleX(0);transform-origin:right;transition:transform .1s ease}.banner:hover .nav-link::before{will-change:transform}.nav-link:hover::before,.nav-link:focus::before{transform:none;opacity:1}.nav-link:active::before{transform:scaleX(.5)}.contact a{margin:1em .5em;display:inline-block;position:relative;color:inherit}.contact a::after{content:"";height:.5rem;bottom:-1rem;position:absolute;left:0;right:0;transform:scaleY(0);transform-origin:top;transition:transform .2s ease;background:#e66d31}.contact a:hover::after,.contact a:focus::after{transform:none}.contact a:active::after{transform:scaleY(.5)}.contact{padding:2em;text-align:center}.contact-content{line-height:1.6em;display:flex;justify-content:center;flex-wrap:wrap}.contact:hover .contact a::after{will-change:transform}.email{margin-right:2.5em}@media(max-width:28em){.email{width:100%;margin:0 0 1.5em}}.contact-icon{height:1.6em;display:block}body{background:url(/contact/background.jpg);background-size:cover;background-position:center}h2{display:inline-block;padding:.75em 1.5em;border-bottom:.1em solid #000}.contact a{font-size:1.2em;margin-bottom:.5em}.contact a:hover{text-decoration:none}.contact a::after{transform:scaleY(.2)}a[href*=mailto]{font-size:1.6em}