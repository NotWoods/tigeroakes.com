{% include base.liquid %}
<!doctype html>
<html>
<head>
	{% include head.html %}
	<link rel="stylesheet" href="{{ base }}/css/core.css">
	<link rel="stylesheet" href="{{ base }}/css/banner.css">
	<link rel="stylesheet" href="{{ base }}/css/footer.css">
	{% for css in page.css %}
		<link rel="stylesheet" href="{{ base }}{{ css }}">
	{% endfor %}
	{{ page.head }}
</head>
<body>
	<header class="banner-container">
		<div class="inner banner">
			<div class="dot"></div>
			<h1 class="banner-title">Tiger Oakes</h1>
			{% include navigation.liquid %}
		</div>
	</header>

	{{ content }}

	<footer class="contact">
		<div class="contact-content">
			<a href="mailto:contact@tigeroakes.com" class="contact-link email">
				contact@tigeroakes.com
			</a>

			<a href="https://github.com/NotWoods" class="contact-link" title="GitHub">
				<img class="contact-icon" alt="GitHub" src="{{ base }}/images/contact/black-github.svg" width="32" height="32">
			</a>
			<a href="https://twitter.com/Not_Woods" class="contact-link" title="LinkedIn">
				<img class="contact-icon" alt="LinkedIn" src="{{ base }}/images/contact/black-linkedin.svg" width="32" height="32">
			</a><br>
			<a href="https://twitter.com/Not_Woods" class="contact-link" title="Twitter">
				<img class="contact-icon" alt="Twitter" src="{{ base }}/images/contact/black-twitter.svg" width="32" height="32">
			</a>
		</div>
	</footer>
</body>
</html>