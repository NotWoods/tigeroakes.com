---
layout: compress
---
<!doctype html>
<html lang="en">
<head>
	{% include head.liquid %}
	{% assign c = page.color %}
	{% assign slug = page.slug | default: page.title | slugify %}
	{% assign images = "/images/" | append: slug | append: "/" %}
	{% assign logo = page.images.logo | prepend: images | absolute_url %}
	<style>
		{% include css/core.css %}
		{% include css/banner.css %}
		{% include css/footer.css %}
		{% include css/button.css %}
		{% include css/projects.css %}
		{% include css/portfolio-page.css %}

		.project-hero {
			background-image: url({{ page.images.background | prepend: images | relative_url }});
			background-color: {{ page.fallbackcolor }};
			--block: rgb({{c.r}}, {{c.g}}, {{c.b}});
			--button: rgba({{c.r}}, {{c.g}}, {{c.b}}, 0.2);
		}
	</style>
	<meta property="og:type" content="product" />
	<meta property="og:title" content="{{ page.title }}" />
	<meta property="og:site_name" content="{{ site.title }}" />
	<meta property="og:description" content="{{ page.summary }}" />
	<meta property="og:url" content="{{ page.url | absolute_url }}" />
	{% if page.hd %}
		{% assign logo = "logo4x.png" | prepend: images | absolute_url %}
	{% endif %}
	<meta property="og:image" content="{{ logo | replace: 'https:', 'http:' }}" />
	<meta property="og:image:secure_url" content="{{ logo | replace: 'http:', 'https:' }}" />
	{% if page.hd %}
		<meta property="og:image:width" content="512" />
		<meta property="og:image:height" content="512" />
	{% else %}
		<meta property="og:image:width" content="128" />
		<meta property="og:image:height" content="128" />
	{% endif %}
	{% for hash in page.ogp %}
		<meta property="{{ hash[0] | replace: '.', ':' }}" content="{{ hash[1] }}" />
	{% endfor %}
	<meta name="twitter:card" content="summary" />
	<meta name="twitter:site" content="@Not_Woods" />
	<meta name="twitter:title" content="{{ page.title }} - {{ site.title }}" />
	<meta name="twitter:description" content="{{ page.summary }}" />
	<meta name="twitter:image" content="{{ logo }}" />
</head>
<body>
	{% include banner.liquid %}

	<article class="project-details-wrapper">
		<header class="project project-hero">
			<div class="project-inner inner">
				<img
					src="{{ page.images.logo | prepend: images | relative_url }}"
					{% if proj.hd %}srcset="{{ images }}logo2x.png 2x, {{ images }}logo3x.png 3x, {{ images }}logo4x.png 4x"{% endif %}
					alt="{{ page.title }}" class="project-logo"
					height="128" width="128"
				>
				<div class="project-hero-text">
					<h1 class="project-header">{{ page.title }}</h1>
					<p class="project-text">{{ page.subtitle }}</p>
					<ul class="project-tech">
						{% for tech in page.tech %}
							<li class="pt-item">{{ tech }}</li>
						{% endfor %}
					</ul>
				</div>
			</div>

			<nav class="project-links">
				{% for hash in page.links %}
					{% unless hash[0] == 'Details' %}
						<a class="button-link shadow" href="{{ hash[1] }}">
							{{ hash[0] | replace: '_', ' ' }}
						</a>
					{% endunless %}
				{% endfor %}
			</nav>
		</header>

		<div class="project-details inner md-content">
			{{ page.content }}
		</div>

		<footer class="cta-wrap">
			<a class="button-link cta shadow" href="{{ base }}/projects/">
				Other projects
			</a>
		</footer>
	</article>

	<footer class="contact" role="contentinfo">
		{% include contact.liquid color="black" %}
	</footer>
</body>
{% include analytics.html %}
</html>
