---
export interface Props {
  title?: string;
}

const { title = 'Code demo' } = Astro.props as Props;
---

<html lang="en">
  <head>
    <title>{title}</title>
  </head>
  <body>
    <h4>{title}</h4>
    <main>
      <p>Drag the corner of the frame to see the count increase.</p>
      <slot />
    </main>
  </body>

  <style>
    html,
    body {
      @apply h-full;
    }
    body {
      @apply m-0 bg-slate-800 text-slate-200 font-sans flex flex-col;
    }
    h4 {
      @apply m-0 px-4 font-mono font-semibold text-lg leading-8;
    }
    main {
      @apply bg-slate-200 text-slate-800 mx-4 mb-4 grow p-4;
    }
    p {
      @apply mt-0;
    }
  </style>
</html>
