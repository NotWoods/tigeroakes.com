---
import AccentBlock from '../AccentBlock.astro';
import { classes } from '../article/ArticleTitle.astro';

export interface Props {
  href: URL | string;
  class?: string;
}

const props = Astro.props as Props;
---

<h3 class:list={[classes, props.class]}>
  <a class="relative group" href={props.href}>
    <AccentBlock position="left" animate />
    <slot />
  </a>
</h3>
