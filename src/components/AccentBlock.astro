---
import { AccentBlock, Props } from './AccentBlock';

export type { Props };

const props = Astro.props as Props;
---

<AccentBlock {...props} />

<style is:global>
  .accent-block--left {
    width: var(--block-size);
    left: calc(calc(var(--block-size) * 2) * -1);
  }
  .accent-block--bottom {
    height: var(--block-size);
    bottom: calc(calc(var(--block-size) * 2) * -1);
  }
</style>
