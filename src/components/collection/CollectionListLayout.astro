---
import ItemTitle from '../lists/ItemTitle.astro';
import SectionTitle from '../lists/SectionTitle.astro';
import BaseCollectionLayout from './BaseCollectionLayout.astro';

export interface Props {
  collection: string;
  tags: readonly {
    url: string;
    name: string;
  }[];
}

const { collection, tags } = Astro.props as Props;
const halfSplit = Math.ceil(tags.length / 2);
---

<BaseCollectionLayout sectionClass="grid grid-cols-1 sm:grid-cols-2">
  <SectionTitle slot="header" class="mb-2">{collection}</SectionTitle>
  <ul>
    {
      tags.slice(0, halfSplit).map((tag) => (
        <li class="py-1">
          <ItemTitle href={tag.url}>{tag.name}</ItemTitle>
        </li>
      ))
    }
  </ul>
  <ul>
    {
      tags.slice(halfSplit).map((tag) => (
        <li class="py-1">
          <ItemTitle href={tag.url}>{tag.name}</ItemTitle>
        </li>
      ))
    }
  </ul>
</BaseCollectionLayout>
