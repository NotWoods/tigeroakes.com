---
import slugger from 'github-slugger';
import '../../styles/tags.css';

export interface Props {
  class?: string;
  tags: readonly string[];
  elsewhere?: string;
}

function href(tag: string) {
  return `/tags/${slugger.slug(tag)}/`;
}

const { tags = [], elsewhere, class: className } = Astro.props as Props;
const projects = [];
---

<ul class={`leading-normal opacity-80 ${className}`}>
  {elsewhere && <li class="pipe-item inline font-bold">{elsewhere}</li>}
  {tags.map(tag => (
    <li class="pipe-item inline"><a class="hover:underline" href={href(tag)}>{tag}</a></li>
  ))}
  {projects.map(project => (
    <li class="pipe-item inline"><a class="hover:underline" href={project.url}>{project.name}</a></li>
  ))}
</ul>
