---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
import type { ImageFormat } from '../../scripts/picture';

export interface Props {
  logo: ImageMetadata;
}

const { logo } = Astro.props as Props;

const width = 128;

const formats: ImageFormat[] =
  logo.format === 'svg' ? ['svg'] : ['avif', 'webp', logo.format];
---

<Picture
  src={logo}
  alt=""
  class="h-32 w-32"
  pictureAttributes={{ class: `w-32 h-32 mx-auto grow-0 shrink-0` }}
  {formats}
  fallbackFormat={logo.format}
  {width}
  height={width}
  widths={[width, width * 2, width * 4]}
  sizes={`${width}px`}
/>
