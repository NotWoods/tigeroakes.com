---
import type { ImageMetadata } from 'astro';
import { Picture } from 'astro:assets';
import type { ImageFormat } from '../Picture.astro';

export interface Props {
  logo: ImageMetadata;
}

const { logo } = Astro.props as Props;

const formats: ImageFormat[] =
  logo.format === 'svg' ? ['svg'] : ['avif', 'webp', logo.format];
---

<Picture
  src={logo}
  alt=""
  class="w-32 h-32"
  {formats}
  fallbackFormat={logo.format}
  widths={[128, 256, 512]}
  sizes="128px"
/>
