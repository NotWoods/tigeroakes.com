---
import { Picture } from '@astrojs/image/components';

export interface Props {
  logo: ImageMetadata;
}

const { logo } = Astro.props as Props;
---

<Picture
  src={logo}
  alt=""
  class="w-32 h-32"
  sizes="128px"
  formats={logo.format === 'svg'
    ? ['svg']
    : ['avif', 'webp', logo.format as 'png' | 'jpeg' | 'jpg']}
  aspectRatio="1:1"
  widths={[128, 256, 512]}
/>
