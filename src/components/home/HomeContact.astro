---
import contactData from '../../data/contact.json';
import { backgroundImage } from '../../scripts/background-image';
import SectionTitle from '../lists/SectionTitle.astro';

const { email, social } = contactData;

const imageSetStyle = backgroundImage({
  avif: '/contact/background.avif',
  webp: '/contact/background.webp',
  jpeg: '/contact/background.jpg',
});
---

<footer
  id="contact"
  style={`--block-scale: 0.2; ${imageSetStyle}`}
  class="bg-center bg-cover bg-no-repeat text-shadow p-8 text-lg text-center"
>
  <SectionTitle class="inline-block mb-4">Contact</SectionTitle>

  <p class="mb-2">You can send an email to</p>
  <a
    class="inline-block mx-4 text-2xl relative accent-block--bottom"
    href="mailto:{email.link}"
    set:html={email.text}
  />

  <p class="mt-12 mb-2">You can find me at</p>
  <ul class="text-xl">
    {
      social.map((item) => (
        <li class="mx-4 mb-6">
          <a
            class="relative inline-block accent-block--bottom"
            title={item.name}
            href={item.link}
            set:html={item.text}
          />
        </li>
      ))
    }
    <li class="mx-4 mb-6 hidden">
      <a
        class="relative inline-block accent-block--bottom"
        title="Mastodon"
        href="https://mastodon.social/@notwoods"
        rel="me"
      >
        <b>mastodon</b>.social/@<b>notwoods</b>
      </a>
    </li>
  </ul>
</footer>
