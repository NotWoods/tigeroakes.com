---
import OpenGraph from './OpenGraph.astro';
import Twitter from './Twitter.astro';

export interface Props {
  title: string;
  description: string;
  pictureSrc?: string;
  pictureAlt?: string;
}

const { title, description, pictureSrc, pictureAlt } = Astro.props as Props;
---

<OpenGraph {title} {description} {pictureAlt} pictureSrc={pictureSrc} />
<Twitter {title} {description} {pictureAlt} pictureSrc={pictureSrc} />
