---
import sectionData from '../../../data/sections.json';
import JsonLD from './JsonLD.astro';

export interface Props {
  title?: string;
}

const { title } = Astro.props as Props;
const path = Astro.url.pathname.split('/').filter(Boolean);
const [sectionPath, pagePath] = path;

const breadcrumbs = [
  { name: 'Tiger Oakes', url: new URL('/', Astro.site) },
];
if (sectionPath) {
  const sectionWithSlash = `/${sectionPath}`;
  const name = sectionData.names[sectionWithSlash];
  breadcrumbs.push({
    name,
    url: new URL(sectionWithSlash, Astro.site),
  });
}
if (pagePath) {
  breadcrumbs.push({ name: title, url: new URL(Astro.url.pathname, Astro.site) });
}

const itemListElement = breadcrumbs.map(({ name, url }, index) => {
  const item = {
    '@type': 'ListItem',
    position: index + 1,
    name,
    item: url.href,
  };
  if (index === breadcrumbs.length - 1) {
    delete item.item;
  }
  return item;
});
const breadcrumbList = {
  '@context': 'https://schema.org',
  '@type': 'BreadcrumbList',
  itemListElement,
};
---

<JsonLD json={breadcrumbList} />
